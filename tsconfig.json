{
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2018",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": [
        "esnext",
        "esnext.asynciterable",
        "dom"
      ],
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "sourceMap": true,
      "noEmit": true,
      "noImplicitAny": true,
      "baseUrl": "./src",
      "paths": {
        "~/*": [ "./*" ]
      }
    },
    "include": [
      "./src/**/*.ts",
      "./src/**/*.vue"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  